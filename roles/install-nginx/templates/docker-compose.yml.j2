version: '3'
services:
  nginx:
    image: '{{ image_repository }}/public/nginx:1.21.1'
    restart: always
    network_mode: "host"
    volumes:
      - ./conf.d:/etc/nginx/conf.d
      - ./nginx.conf:/etc/nginx/nginx.conf
      - ./log:/var/log/nginx
      - ./www:/var/www
      - /etc/localtime:/etc/localtime
      - /etc/letsencrypt:/etc/letsencrypt