version: '3'
services:
  nginx:
    image: '{{ image_repository }}/public/nginx:1.21.1'
    restart: always
    ports:
      - 80:80
      - 443:443
      - 8080:8080
    volumes:
      - ./conf.d:/etc/nginx/conf.d
      - ./nginx.conf:/etc/nginx/nginx.conf
      - ./log:/var/log/nginx
      - ./www:/var/www
      - /etc/letsencrypt:/etc/letsencrypt
  filebeat:
    image: "{{ image_repository }}/public/elastic/filebeat:7.13.2"
    restart: always
    volumes:
      - ./log:/var/log/nginx
      - ./filebeat.yml:/usr/share/filebeat/filebeat.yml

