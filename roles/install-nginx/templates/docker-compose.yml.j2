version: '3'
services:
  nginx:
    image: "{{ nginx_image }}"
    restart: always
    ports:
      - 80:80
      - 443:443
      - 8080:8080
    volumes:
      - ./conf.d:/etc/nginx/conf.d
      - ./nginx.conf:/etc/nginx/nginx.conf
      - ./log:/var/log/nginx
      - ./www:/var/www
      - /etc/letsencrypt:/etc/letsencrypt
  filebeat:
    image: "{{ image_repository }}/public/elastic/filebeat:7.13.2"
    restart: always
    volumes:
      - ./log:/var/log/nginx
      - ./filebeat.yml:/usr/share/filebeat/filebeat.yml
  nginx-exporter:
    image: '{{ image_repository }}/public/nginx-prometheus-exporter:0.9.0'
    restart: always
    network_mode: host
    command:
      - --nginx.scrape-uri=http://nginx:8080/stub_status

