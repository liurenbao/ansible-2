server {
  listen       30001 backlog=65534;
  listen  [::]:30001 backlog=65534;

  listen       30002 backlog=65534;
  listen  [::]:30002 backlog=65534;

  listen       30003 backlog=65534;
  listen  [::]:30003 backlog=65534;

  listen       30004 backlog=65534;
  listen  [::]:30004 backlog=65534;

  listen       30005 backlog=65534;
  listen  [::]:30005 backlog=65534;

  listen       31000 backlog=65534;
  listen  [::]:31000 backlog=65534;

  server_name  localhost;

  location / {
    proxy_read_timeout  60s;
    proxy_next_upstream_timeout 1s;
    proxy_pass $scheme://{{ k8s_keepalived_vip }}:$server_port;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $host:$server_port;
  }

}

upstream rocketmq_console {
  server {{ groups['rocketmq-console'][0] }}:8080;
}
server {
  listen       8080 backlog=65534;
  listen  [::]:8080 backlog=65534;
  server_name  localhost;

  location / {
    proxy_read_timeout  60s;
    proxy_next_upstream_timeout 1s;
    proxy_pass $scheme://rocketmq_console;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $host:$server_port;
  }
}