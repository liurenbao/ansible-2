upstream mesadmin {
{% for host in groups['k8s-worker'] %}
    server {{ host }}:31061  max_fails=0;
{% endfor %}
}
upstream plantuservers {
{% for host in groups['k8s-worker'] %}
    server {{ host }}:31070  max_fails=0;
{% endfor %}
}
server {
    listen       31061 backlog=65534;
    listen  [::]:31061 backlog=65534;
    server_name  localhost;

    location / {
        proxy_read_timeout  90s;
        proxy_next_upstream_timeout 1s;
        proxy_pass http://mesadmin;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
    }
}
server {
    listen 8282 backlog=65534;
    listen  [::]:8282 backlog=65534;
    location / {
        proxy_read_timeout  90s;
        proxy_next_upstream_timeout 1s;
        proxy_pass http://plantuservers;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
    }
}