user  nginx;
worker_processes  8;
worker_cpu_affinity 00000001 00000010 00000100 00001000 00010000 00100000 01000000;
worker_rlimit_nofile 65535;
error_log  /var/log/nginx/error.log warn;
pid        /var/run/nginx.pid;

events {
  use epoll;
  worker_connections  65535;
}

http {
  gzip on;
  tcp_nopush on;
  tcp_nodelay on;
  server_tokens off;
  include       /etc/nginx/mime.types;
  default_type  application/octet-stream;

  log_format  main  '[$time_local] - $remote_addr - $request_time - $upstream_response_time - $upstream_status - $upstream_addr - $remote_user $request '
  '$status $body_bytes_sent $http_referer - $http_user_agent - $http_x_forwarded_for';

  access_log  /var/log/nginx/access.log  main;
  proxy_next_upstream http_502 http_503 timeout error invalid_header;

  proxy_connect_timeout 10ms;

  sendfile        on;
  keepalive_timeout  65;
  client_max_body_size 100m;
  include /etc/nginx/conf.d/*.conf;
}
