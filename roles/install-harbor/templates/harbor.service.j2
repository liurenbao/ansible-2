[Unit]
Description=Harbor
After=docker.service systemd-networkd.service systemd-resolved.service
Requires=docker.service

[Service]
Type=simple
User={{ cim_ops_user }}
Restart=on-failure
RestartSec=5
ExecStart=/usr/local/bin/docker-compose -f {{ harbor_root_dir }}/docker-compose.yml up
ExecStop=/usr/local/bin/docker-compose -f {{ harbor_root_dir }}/docker-compose.yml down
[Install]
WantedBy=multi-user.target