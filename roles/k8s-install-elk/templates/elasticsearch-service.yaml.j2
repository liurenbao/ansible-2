apiVersion: v1
kind: Endpoints
metadata:
  name: elasticsearch
  namespace: elk
subsets:
  - addresses:
{% for host in groups['es'] %}
    - ip: {{ host }}
      nodeName: {{ hostvars[host].host_name }}
{% endfor %}
    ports:
      - port: 9200
---
apiVersion: v1
kind: Service
metadata:
  name: elasticsearch
  namespace: elk
spec:
  ports:
    - port: 9200