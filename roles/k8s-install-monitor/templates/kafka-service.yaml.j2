apiVersion: v1
kind: Endpoints
metadata:
  name: kafka
  namespace: monitoring
subsets:
  - addresses:
{% for host in groups['kafka'] %}
      - ip: {{ host }}
        nodeName: {{ hostvars[host].host_name }}
{% endfor %}
    ports:
      - port: 9092
---
apiVersion: v1
kind: Service
metadata:
  name: kafka
  namespace: monitoring
  annotations:
    maintainer: mouyongde@cicem.fa
    prometheus.io/tcp-probe: "true"
    prometheus.io/scrape: "true"
    prometheus.io/port: '9308'
    prometheus.io/scheme: "http"
spec:
  ports:
    - port: 9092