apiVersion: v1
kind: Endpoints
metadata:
  name: kafka
  namespace: monitoring
subsets:
  - addresses:
{% for host in groups['kafka'] %}
      - ip: {{ host }}
{% endfor %}
    ports:
      - port: 9308
---
apiVersion: v1
kind: Service
metadata:
  name: kafka
  namespace: monitoring
  annotations:
    prometheus.io/scrape: "true"
    prometheus.io/port: '9308'
    prometheus.io/scheme: "http"
spec:
  ports:
    - port: 9308