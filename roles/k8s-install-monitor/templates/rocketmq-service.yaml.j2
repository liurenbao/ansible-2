apiVersion: v1
kind: Endpoints
metadata:
  name: rocketmq
  namespace: monitoring
subsets:
  - addresses:
      - ip: '{{ groups["rocketmq-console"][0] }}'
    ports:
      - port: 9876
---
apiVersion: v1
kind: Service
metadata:
  name: rocketmq
  namespace: monitoring
  annotations:
    prometheus.io/tcp-probe: "true"
    prometheus.io/scrape: "true"
    prometheus.io/port: '5557'
    prometheus.io/scheme: "http"
spec:
  ports:
    - port: 9876
---
apiVersion: v1
kind: Endpoints
metadata:
  name: rocketmq-process-exporter
  namespace: monitoring
subsets:
  - addresses:
{% for host in groups['rocketmq-namesrv'] %}
    - ip: {{ host }}
{% endfor %}
{% for host in groups['rocketmq-master'] %}
    - ip: {{ host }}
{% endfor %}
{% for host in groups['rocketmq-slave'] %}
    - ip: {{ host }}
{% endfor %}
    ports:
      - port: 9256
---
apiVersion: v1
kind: Service
metadata:
  name: rocketmq-process-exporter
  namespace: monitoring
  annotations:
    prometheus.io/scrape: "true"
    prometheus.io/port: '9256'
    prometheus.io/scheme: "http"
spec:
  ports:
    - port: 9256
  type: ClusterIP