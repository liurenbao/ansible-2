{% for host in groups['redis'] %}
apiVersion: v1
kind: Endpoints
metadata:
  name: '{{ hostvars[host].host_name }}'
  namespace: monitoring
subsets:
  - addresses:
      - ip: '{{ host }}'
        nodeName: '{{ hostvars[host].host_name }}'
    ports:
      - port: 6379
---
apiVersion: v1
kind: Service
metadata:
  name: '{{ hostvars[host].host_name }}'
  namespace: monitoring
  annotations:
    maintainer: mouyongde@cicem.fa
    prometheus.io/tcp-probe: "true"
spec:
  ports:
    - port: 6379
---
{% endfor %}
---
apiVersion: v1
kind: Endpoints
metadata:
  name: redis-node-exporter
  namespace: monitoring
subsets:
  - addresses:
{% for host in groups['redis'] %}
    - ip: {{ host }}
      nodeName: {{ hostvars[host].host_name }}
{% endfor %}
    ports:
      - port: 9100
---
apiVersion: v1
kind: Service
metadata:
  name: redis-node-exporter
  namespace: monitoring
  annotations:
    maintainer: mouyongde@cicem.fa
    prometheus.io/scrape: "true"
    prometheus.io/port: '9100'
    prometheus.io/scheme: "http"
spec:
  ports:
    - port: 9100