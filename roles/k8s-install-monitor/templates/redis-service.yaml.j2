apiVersion: v1
kind: Endpoints
metadata:
  name: redis
  namespace: monitoring
subsets:
  - addresses:
{% for host in groups['redis'] %}
      - ip: {{ host }}
        nodeName: {{ hostvars[host].host_name }}
{% endfor %}
    ports:
      - port: 6379
---
apiVersion: v1
kind: Service
metadata:
  name: redis
  namespace: monitoring
  annotations:
    prometheus.io/tcp-probe: "true"
    prometheus.io/scrape: "true"
    prometheus.io/port: '9121'
    prometheus.io/scheme: "http"
spec:
  ports:
    - port: 6379
---
apiVersion: v1
kind: Endpoints
metadata:
  name: redis-node-exporter
  namespace: monitoring
subsets:
  - addresses:
{% for host in groups['redis'] %}
    - ip: {{ host }}
      nodeName: {{ hostvars[host].host_name }}
{% endfor %}
    ports:
      - port: 9100
---
apiVersion: v1
kind: Service
metadata:
  name: redis-node-exporter
  namespace: monitoring
  annotations:
    prometheus.io/scrape: "true"
    prometheus.io/port: '9100'
    prometheus.io/scheme: "http"
spec:
  ports:
    - port: 9100