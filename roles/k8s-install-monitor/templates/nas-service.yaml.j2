apiVersion: v1
kind: Endpoints
metadata:
  name: nas-node-exporter
  namespace: monitoring
subsets:
  - addresses:
{% for host in groups['nas'] %}
    - ip: {{ host }}
      nodeName: {{ hostvars[host].host_name }}
{% endfor %}
    ports:
      - port: 9100
---
apiVersion: v1
kind: Service
metadata:
  name: nas-node-exporter
  namespace: monitoring
  annotations:
    prometheus.io/scrape: "true"
    prometheus.io/port: '9100'
    prometheus.io/scheme: "http"
spec:
  ports:
    - port: 9100