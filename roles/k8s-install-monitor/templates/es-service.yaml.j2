{% for host in groups['es'] %}
apiVersion: v1
kind: Endpoints
metadata:
  name: '{{ hostvars[host].host_name }}'
  namespace: monitoring
subsets:
  - addresses:
      - ip: '{{ host }}'
        nodeName: '{{ hostvars[host].host_name }}'
    ports:
      - port: 9114
        name: metrics
      - port: 9200
        name: web
---
apiVersion: v1
kind: Service
metadata:
  name: '{{ hostvars[host].host_name }}'
  namespace: monitoring
  annotations:
    maintainer: mouyongde@cicem.fa
    prometheus.io/scrape: "true"
    prometheus.io/port: '9114'
    prometheus.io/scheme: "http"
    prometheus.io/http-probe: "true"
    prometheus.io/http-probe-port: "9200"
    prometheus.io/http-probe-path: "/_cat/health"
spec:
  ports:
    - port: 9114
      name: metrics
    - port: 9200
      name: web
---
{% endfor %}
---
apiVersion: v1
kind: Endpoints
metadata:
  name: elasticsearch-node-exporter
  namespace: monitoring
subsets:
  - addresses:
{% for host in groups['es'] %}
    - ip: {{ host }}
      nodeName: {{ hostvars[host].host_name }}
{% endfor %}
    ports:
      - port: 9100
---
apiVersion: v1
kind: Service
metadata:
  name: elasticsearch-node-exporter
  namespace: monitoring
  annotations:
    maintainer: mouyongde@cicem.fa
    prometheus.io/scrape: "true"
    prometheus.io/port: '9100'
    prometheus.io/scheme: "http"
spec:
  ports:
    - port: 9100