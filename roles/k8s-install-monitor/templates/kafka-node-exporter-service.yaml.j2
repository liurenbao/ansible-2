apiVersion: v1
kind: Endpoints
metadata:
  name: kafka-node-exporter
  namespace: monitoring
subsets:
  - addresses:
{% for host in groups['kafka'] %}
      - ip: {{ host }}
        nodeName: {{ hostvars[host].host_name }}-{{ host }}
{% endfor %}
    ports:
      - port: 9100
---
apiVersion: v1
kind: Service
metadata:
  name: kafka-node-exporter
  namespace: monitoring
  annotations:
    prometheus.io/scrape: "true"
    prometheus.io/port: '9100'
    prometheus.io/scheme: "http"
spec:
  ports:
    - port: 9100