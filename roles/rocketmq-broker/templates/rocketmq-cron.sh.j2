#!/bin/sh
RMQ_DIR="{{ rocketmq_root_dir }}"
RMQ_BIN="${RMQ_DIR}/bin"
BPID=`ps ax | grep -i 'org.apache.rocketmq.broker.BrokerStartup' |grep java |grep ${RMQ_ROLE}.properties |grep -v grep |awk '{print $1}'`
if [[ -n $BPID ]]; then
  echo "Rocketmq already started"
else
  ${RMQ_BIN}/rmq-tools.sh {{ broker_name }} start
fi