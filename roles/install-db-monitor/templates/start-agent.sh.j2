#!/bin/bash

usage() {
  echo "usage: $0 start/stop/restart"
}

command=$1
if [ -z $command ]; then
    usage
    exit 1
fi

JAVA_HOME={{ gaussdb_jdk_dir }}
WORK_DIR={{ gaussdb_monitor_agent_root_dir }}/{{ gaussdb_user }}
SPRING_CONFIG_PATH=$WORK_DIR/application.yml
JAR_PATH=$WORK_DIR/agent.jar

start() {
  PID=$(ps -ef | grep $JAR_PATH | grep -v grep | awk '{print $2}')
  if [[ $PID ]]; then
      echo "Agent already started"
      exit 0
  fi
  cd $WORK_DIR
  nohup $JAVA_HOME/bin/java -jar -Dspring.config.location=$SPRING_CONFIG_PATH $JAR_PATH &
  echo "Agent start success"
}

stop() {
  PID=$(ps -ef | grep $JAR_PATH | grep -v grep | awk '{print $2}')
  if [[ $PID ]]; then
      kill -9 $PID
      echo "Agent stopped"
  else
      echo "Agent not running"
  fi
}

restart() {
  stop
  start
}

if [ $1 == "start" ]; then
    start
elif [ $1 == "stop" ]; then
    stop
elif [ $1 == "restart" ]; then
    restart
else usage
fi

